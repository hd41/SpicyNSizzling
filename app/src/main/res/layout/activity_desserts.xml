                    android:id="@+id/mi5"
                    android:layout_weight="0.10"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/tf5"
                    android:layout_weight="0.10"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="40sp"
                    android:layout_weight="0.10"
                    android:padding="0sp"
                    android:id="@+id/ma5"
                    android:text="+"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
