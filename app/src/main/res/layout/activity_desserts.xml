                    android:padding="0sp"
                    android:id="@+id/ma4"
                    android:layout_weight="0.10"
                    android:text="+"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
